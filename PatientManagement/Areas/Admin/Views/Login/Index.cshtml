<!--TIPS-->
<!--You may remove all ID or Class names which contain "demo-", they are only used for demonstration. -->

<body>
    <div id="container" class="cls-container">
        <!-- BACKGROUND IMAGE -->
        <!--===================================================-->
        <div id="bg-overlay" class="bg-img" style="background-image: url('/Areas/Admin/Content/img/bg-img/bg-img-4.jpg');"></div>

        <!-- LOGIN FORM -->
        <!--===================================================-->
        <div class="cls-content">
            <div class="cls-content-sm panel">
                <div class="panel-body">
                    <div class="mar-ver pad-btm">
                        <h1 class="h3">Tài khoản Đăng nhập</h1>
                        <p>Đăng nhập vào tài khoản của bạn</p>
                    </div>
                    <form action="#" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="Username" id="Username" placeholder="Tài Khoản">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="Password" id="Password" placeholder="Mật Khẩu">
                        </div>
                        <div class="checkbox pad-btm text-left">
                            <input id="demo-form-checkbox" class="magic-checkbox" type="checkbox" checked>
                            <label for="demo-form-checkbox">Remember me</label>
                        </div>
                        <input type="hidden" value="@ViewBag.ReturnUrl" id="rtUrl" />
                        <button class="btn btn-primary btn-lg btn-block" id="btnLogin" type="submit">Đăng nhập</button>
                    </form>
                </div>

                <div class="pad-all">
                    <a href="#" class="btn-link mar-rgt">Quên mật khẩu ?</a>
                </div>
            </div>
        </div>
    </div>
    <!--===================================================-->
    <!-- END OF CONTAINER -->
    <!--JAVASCRIPT-->
    <!--=================================================-->
    <!--jQuery [ REQUIRED ]-->
    <script src="@baseURL/js/jquery.min.js"></script>

    <!--BootstrapJS [ RECOMMENDED ]-->
    <script src="@baseURL/js/bootstrap.min.js"></script>

    <!--NiftyJS [ RECOMMENDED ]-->
    <script src="@baseURL/js/nifty.min.js"></script>

    <!--Bootstrap Validator [ OPTIONAL ]-->
    <script src="@baseURL/plugins/bootstrap-validator/bootstrapValidator.min.js"></script>

    <!--Bootstrap Validator [ OPTIONAL ]-->
    <script src="@baseURL/plugins/bootbox/bootbox.min.js"></script>

    <!-- base notify -->
    <script src="@baseURL/js/base/notify.js"></script>

    <!-- live login -->
    <script src="@baseURL/js/live/login.admin.js"></script>
</body>
</html>